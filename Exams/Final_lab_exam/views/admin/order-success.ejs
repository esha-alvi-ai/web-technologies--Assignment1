<main id="order-success">
  <h1>Order Placed Successfully!</h1>
  <p>Thank you for your order, <%= order.customer.name %>!</p>

  <div class="order-summary">
    <h2>Order Details</h2>
    <div class="order-detail">
      <p><strong>Email:</strong> <%= order.customer.email %></p>
      <p><strong>Address:</strong> <%= order.customer.address %></p>
      <p><strong>Total Price:</strong> $<%= order.totalPrice.toFixed(2) %></p>
      <p><strong>Order Date:</strong> <%= new Date(order.createdAt).toLocaleDateString() %></p>
    </div>
  </div>

  <div class="order-items">
    <h3>Items Ordered:</h3>
    <ul>
      <% order.items.forEach(item => { %>
        <li>
          <span class="item-name"><%= item.name %></span>
          <span class="item-price">$<%= item.price.toFixed(2) %></span>
          <span class="item-quantity">x<%= item.quantity %></span>
        </li>
      <% }) %>
    </ul>
  </div>

  <div class="form-actions">
    <a href="/orders" class="btn">View All Orders</a>
  </div>
</main>

<style>
  body {
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    background: #eef2f7;
    margin: 0;
    padding: 0;
  }

  #order-success {
    max-width: 800px;
    margin: 50px auto;
    padding: 40px;
    background-color: #ffffff;
    border-radius: 12px;
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
    text-align: center;
  }

  #order-success h1 {
    font-size: 2.5rem;
    color: #28a745;
    margin-bottom: 10px;
  }

  #order-success p {
    font-size: 1.2rem;
    color: #333;
    margin-bottom: 20px;
  }

  .order-summary h2 {
    font-size: 1.8rem;
    color: #222;
    margin-bottom: 15px;
  }

  .order-detail {
    background-color: #f9f9f9;
    padding: 20px;
    border-radius: 10px;
    text-align: left;
    margin-bottom: 30px;
    box-shadow: inset 0 0 5px rgba(0, 0, 0, 0.05);
  }

  .order-detail p {
    font-size: 1.1rem;
    margin: 8px 0;
    color: #444;
  }

  .order-items h3 {
    font-size: 1.6rem;
    margin-bottom: 10px;
    color: #333;
    text-align: left;
  }

  .order-items ul {
    list-style-type: none;
    padding: 0;
    text-align: left;
  }

  .order-items li {
    background-color: #f1f1f1;
    margin-bottom: 10px;
    padding: 15px;
    border-radius: 8px;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .item-name {
    font-weight: 600;
    color: #222;
  }

  .item-price,
  .item-quantity {
    font-size: 1rem;
    color: #555;
  }

  .form-actions {
    margin-top: 30px;
  }

  .form-actions .btn {
    background-color: #28a745;
    color: white;
    padding: 12px 30px;
    border: none;
    border-radius: 30px;
    font-size: 1.1rem;
    text-decoration: none;
    cursor: pointer;
    transition: background-color 0.3s ease, transform 0.2s ease;
  }

  .form-actions .btn:hover {
    background-color: #218838;
    transform: scale(1.05);
  }

  @media (max-width: 600px) {
    #order-success {
      padding: 20px;
    }

    .order-items li {
      flex-direction: column;
      align-items: flex-start;
    }

    .form-actions .btn {
      width: 100%;
      padding: 12px;
    }
  }
</style>
