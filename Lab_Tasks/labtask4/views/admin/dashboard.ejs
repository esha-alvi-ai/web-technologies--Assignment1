<main class="container my-5">
  <h1 class="text-center mb-4">Welcome to the Admin Dashboard</h1>
  <p class="text-center lead mb-5">Manage your products, categories, and orders seamlessly from here.</p>

  <div class="row justify-content-center">
    <!-- Products -->
    <div class="col-md-4 mb-4">
      <div class="card shadow border-0">
        <div class="card-body text-center">
          <h5 class="card-title">Manage Products</h5>
          <p class="card-text">Add, update, and delete products efficiently.</p>
          <a href="/admin/product" class="btn btn-primary">Go to Products</a>
        </div>
      </div>
    </div>

    <!-- Categories -->
    <div class="col-md-4 mb-4">
      <div class="card shadow border-0">
        <div class="card-body text-center">
          <h5 class="card-title">Manage Categories</h5>
          <p class="card-text">Add, update, and delete categories for your products.</p>
          <a href="/admin/category" class="btn btn-primary">Go to Categories</a>
        </div>
      </div>
    </div>

    <!-- Orders -->
    <div class="col-md-4 mb-4">
      <div class="card shadow border-0">
        <div class="card-body text-center">
          <h5 class="card-title">Manage Orders</h5>
          <p class="card-text">View, update, and track customer orders.</p>
          <a href="admin/order" class="btn btn-primary">Go to Orders</a>
        </div>
      </div>
    </div>

    <!-- Cart -->
    <div class="col-md-4 mb-4">
      <div class="card shadow border-0">
        <div class="card-body text-center">
          <h5 class="card-title">View Cart</h5>
          <p class="card-text">Check customer shopping cart contents.</p>
          <a href="admin/cart" class="btn btn-primary">Go to Cart</a>
        </div>
      </div>
    </div>

    <!-- Checkout -->
    <div class="col-md-4 mb-4">
      <div class="card shadow border-0">
        <div class="card-body text-center">
          <h5 class="card-title">Checkout</h5>
          <p class="card-text">Handle the checkout process and order placement.</p>
          <a href="admin/checkout" class="btn btn-primary">Go to Checkout</a>
        </div>
      </div>
    </div>

    <!-- Logout -->
    <div class="col-md-4 mb-4">
      <div class="card shadow border-0">
        <div class="card-body text-center">
          <h5 class="card-title">Logout</h5>
          <p class="card-text">Log out from the admin panel securely.</p>
          <a href="/logout" class="btn btn-danger">Logout</a>
        </div>
      </div>
    </div>

    <!-- Go to Home -->
    <div class="col-md-4 mb-4">
      <div class="card shadow border-0">
        <div class="card-body text-center">
          <h5 class="card-title">See My Website</h5>
          <p class="card-text">View the main page of your website.</p>
          <a href="/" class="btn btn-primary">Go to Home</a>
        </div>
      </div>
    </div>
  </div>
</main>
