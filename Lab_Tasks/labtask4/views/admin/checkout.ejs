
<main id="checkout">
    <h1>Checkout</h1>
    <form action="/checkout" method="POST">
      <div class="form-group">
        <label for="name">Name:</label>
        <input type="text" id="name" name="name" required>
      </div>
  
      <div class="form-group">
        <label for="email">Email:</label>
        <input type="email" id="email" name="email" required>
      </div>
  
      <div class="form-group">
        <label for="address">Address:</label>
        <textarea id="address" name="address" required></textarea>
      </div>
  
      <h2>Total: $<%= totalPrice.toFixed(2) %></h2>

      <!-- Payment Method Selection -->
      <div class="form-group">
        <label for="payment">Payment Method:</label>
        <div class="payment-option">
          <label class="payment-label">
            <input type="radio" id="payment-credit" name="payment" value="credit" required>
            <span class="payment-option-text">
              <i class="fas fa-credit-card"></i> Credit/Debit Card
            </span>
          </label>
        </div>
        <div class="payment-option">
          <label class="payment-label">
            <input type="radio" id="payment-cash" name="payment" value="cash">
            <span class="payment-option-text">
              <i class="fas fa-cash-register"></i> Cash on Delivery
            </span>
          </label>
        </div>
      </div>

      <div class="form-actions">
        <button type="submit">Place Order</button>
      </div>
    </form>
</main>

